{
  "name": "naestro",
  "private": true,
  "scripts": {
    "md:lint": "markdownlint-cli2 \"**/*.md\" \"#**/node_modules\"",
    "md:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "md:fmt": "prettier --write \"**/*.md\"",
    "md:check": "prettier --check \"**/*.md\" && markdownlint-cli2 \"**/*.md\" \"#**/node_modules\"",
    "markdown-link-check": "markdown-link-check -c .markdown-link-check.json REFERENCES.md ROADMAP.md",
    "test": "pytest"
  },
  "devDependencies": {
    "markdown-link-check": "^3.13.7",
    "markdownlint-cli2": "^0.15.0",
    "prettier": "^3.3.2"
  }
}
