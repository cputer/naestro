{
  "name": "naestro",
  "private": true,
  "scripts": {
    "md:lint": "markdownlint-cli2 \"**/*.md\"",
    "md:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "md:fmt": "prettier --write \"**/*.md\"",
    "md:check": "prettier --check \"**/*.md\" && markdownlint-cli2 \"**/*.md\""
  },
  "devDependencies": {
    "markdownlint-cli2": "^0.15.0",
    "prettier": "^3.3.2"
  }
}
